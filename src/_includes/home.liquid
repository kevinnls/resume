---
layout: base.liquid
---

<header>
	<h1>{{-site.name-}}</h1>
</header>

<main>
	<ul>
	{%- assign sortedexp = experience | sortbydate %}
	{%- for exp in sortedexp -%}
		<li>
			<h2>{{- exp.title -}}</h2>
			<h3>{{- exp.org.name -}}</h3>
			<div>
				<time datetime="{{- exp.period.from | machine_date -}}" >
					{{- exp.period.from | human_date: lang -}}
				</time>
				<span>&ndash;</span>
				<time datetime="{{- exp.period.to | machine_date -}}">
					{{- exp.period.to | human_date: lang -}}
				</time>
			</div>
			<p>
			{{-exp.description-}}
			</p>
		</li>
	{%- endfor -%}
	</ul>
	{{- content -}}
</main>

<footer>
	<small>&copy;&nbsp;{{- site.name -}}</small>
</footer>
